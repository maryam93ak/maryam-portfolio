---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const photos = (await getCollection('playground')).sort((a, b) => a.data.order - b.data.order);
---

<Layout title="Playground - Maryam Akhyani" description="Explore my creative playground featuring diverse photography projects across landscapes, portraits, architecture, and more.">
  <main class="playground-page">
    <!-- Logo -->
    <a href="/" class="logo">
      <h1 class="logo-text">
        <span class="first-name">Maryam</span>
        <span class="last-name">Akhyani</span>
      </h1>
    </a>

    <!-- Page Header with Filter -->
    <div class="playground-header">
      <h1>Playground</h1>
      <div class="filter-dropdown">
        <button class="filter-toggle" id="filterToggle" aria-label="Filter projects">
          <svg
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
          >
            <polygon points="22,3 2,3 10,12.46 10,19 14,21 14,12.46"></polygon>
          </svg>
        </button>
        <div class="filter-menu" id="filterMenu"></div>
      </div>
    </div>

    <!-- Playground Grid -->
    <div class="playground-content">
      {photos.length === 0 ? (
        <p class="empty-state">No photos yet. Add markdown files to your playground collection to get started.</p>
      ) : (
        <div class="playground-grid">
          {photos.map((photo) => (
            <div class="grid-item" data-category={photo.data.category}>
              <img src={photo.data.image} alt={photo.data.title} loading="lazy" />
              <div class="grid-item-overlay">
                <div class="category">{photo.data.category}</div>
                <h3>{photo.data.title}</h3>
                <p>{photo.data.tagline}</p>
              </div>
            </div>
          ))}
        </div>
      )}
    </div>
  </main>
</Layout>

<style>
  /* Page Layout */
  .playground-page {
    padding-top: 160px;
    padding-bottom: 80px;
    min-height: 100vh;
  }

  /* Logo */
  .logo {
    position: fixed;
    top: 1.5rem;
    left: 3rem;
    z-index: 100;
    text-decoration: none;
    transition: transform 0.3s ease;
  }

  .logo:hover {
    transform: scale(1.05);
  }

  .logo:hover .first-name,
  .logo:hover .last-name {
    color: #d4af37;
  }

  .logo-text {
    font-family: "Playfair Display", serif;
    font-size: 0;
    font-weight: 400;
    margin: 0;
    line-height: 0.9;
    letter-spacing: 0.02em;
    display: block;
  }

  .logo-text .first-name {
    display: block;
    font-size: 1.2rem;
    line-height: 1;
    font-family: "Playfair Display", serif;
    font-weight: 400;
    color: var(--primary-orange);
    transition: all 0.3s ease;
  }

  .logo-text .last-name {
    display: block;
    font-size: 1.2rem;
    line-height: 1.1;
    margin-top: -0.05em;
    font-family: "Playfair Display", serif;
    font-weight: 400;
    color: var(--primary-orange);
    padding-bottom: 0.1em;
    transition: all 0.3s ease;
  }

  /* Page Header */
  .playground-header {
    position: relative;
    text-align: center;
    margin-bottom: 60px;
    margin-left: 140px; /* Account for left sidebar */
    padding: 0 20px;
  }

  .playground-header h1 {
    font-family: "Playfair Display", serif;
    font-size: 3rem;
    font-weight: 700;
    color: var(--text-dark);
    margin: 0;
  }

  /* Filter Dropdown */
  .filter-dropdown {
    position: fixed;
    top: 30px;
    right: 30px;
    z-index: 100;
  }

  .filter-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: transparent;
    border: 1px solid rgba(61, 53, 46, 0.15);
    border-radius: 8px;
    color: rgba(61, 53, 46, 0.6);
    cursor: pointer;
    transition: all 0.2s ease;
    position: relative;
  }

  .filter-toggle:hover {
    background: rgba(61, 53, 46, 0.05);
    border-color: rgba(61, 53, 46, 0.25);
    color: var(--primary-orange);
    transform: translateY(-1px);
  }

  .filter-toggle.active {
    background: var(--primary-orange);
    border-color: var(--primary-orange);
    color: var(--white);
  }

  .filter-toggle svg {
    transition: all 0.2s ease;
  }

  .filter-toggle:hover svg {
    transform: scale(1.1);
  }

  .filter-toggle::after {
    content: "Filter";
    position: absolute;
    top: -35px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 0.3rem 0.6rem;
    border-radius: 4px;
    font-size: 0.75rem;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.2s ease;
    pointer-events: none;
  }

  .filter-toggle:hover::after {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(-2px);
  }

  .filter-menu {
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    min-width: 180px;
    max-width: 220px;
    background: var(--white);
    border: 1px solid rgba(61, 53, 46, 0.1);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-8px);
    transition: all 0.2s ease;
    z-index: 100;
    overflow: hidden;
  }

  .filter-menu.open {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  :global(.filter-option) {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.7rem 1rem;
    cursor: pointer;
    font-size: 0.85rem;
    color: var(--text-dark);
    transition: background-color 0.15s ease;
    border-bottom: 1px solid rgba(61, 53, 46, 0.06);
  }

  :global(.filter-option:last-child) {
    border-bottom: none;
  }

  :global(.filter-option:hover) {
    background: rgba(217, 109, 43, 0.06);
  }

  :global(.filter-option.active) {
    background: rgba(217, 109, 43, 0.1);
    color: var(--primary-orange);
    font-weight: 500;
  }

  :global(.filter-option .count) {
    font-size: 0.75rem;
    color: rgba(61, 53, 46, 0.5);
    font-weight: 400;
  }

  :global(.filter-option.active .count) {
    color: var(--primary-orange);
  }

  /* Playground Content */
  .playground-content {
    max-width: 1400px;
    margin: 0 auto;
    margin-left: 140px; /* Account for left sidebar */
    padding: 0 40px;
  }

  /* Playground Grid */
  .playground-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 30px;
    grid-auto-flow: dense;
  }

  /* Grid Items */
  .grid-item {
    position: relative;
    display: block;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: var(--card-shadow);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: var(--white);
    aspect-ratio: 4/3;
    text-decoration: none;
    color: inherit;
    cursor: pointer;
  }

  .grid-item.hidden {
    display: none;
  }

  .grid-item:hover {
    transform: translateY(-8px);
    box-shadow: var(--card-shadow-hover);
  }

  .grid-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .grid-item:hover img {
    transform: scale(1.1);
  }

  /* Grid Item Overlay */
  .grid-item-overlay {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 30px 20px 20px;
    background: linear-gradient(
      to top,
      rgba(0, 0, 0, 0.9) 0%,
      rgba(0, 0, 0, 0.7) 50%,
      transparent 100%
    );
    color: var(--white);
    transform: translateY(0);
    transition: all 0.4s ease;
  }

  .grid-item:hover .grid-item-overlay {
    padding-bottom: 30px;
  }

  .grid-item-overlay .category {
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--secondary-orange);
    margin-bottom: 8px;
    font-weight: 600;
  }

  .grid-item-overlay h3 {
    font-family: "Playfair Display", serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 8px 0;
    color: var(--white);
  }

  .grid-item-overlay p {
    font-size: 0.9rem;
    margin: 0;
    opacity: 0.9;
    line-height: 1.5;
  }

  /* Responsive Design */
  @media (max-width: 1024px) {
    .playground-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 25px;
    }

    .playground-content {
      margin-left: 100px; /* Adjust for tablet sidebar position */
      padding: 0 30px;
    }

    .playground-header {
      margin-left: 100px; /* Adjust for tablet sidebar position */
    }
  }

  @media (max-width: 768px) {
    .playground-page {
      padding-top: 140px;
      padding-bottom: 100px;
    }

    .logo {
      top: 1.5rem;
      left: 1.5rem;
    }

    .logo-text .first-name,
    .logo-text .last-name {
      font-size: 1rem;
    }

    .filter-dropdown {
      top: 20px;
      right: 20px;
    }

    .filter-toggle {
      width: 36px;
      height: 36px;
    }

    .filter-toggle svg {
      width: 16px;
      height: 16px;
    }

    .filter-menu {
      min-width: 160px;
      max-width: 200px;
    }

    .playground-header h1 {
      font-size: 2.5rem;
    }

    .playground-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 20px;
    }

    .playground-content {
      margin-left: 0; /* Remove left margin on mobile - no sidebar */
      padding: 0 20px;
    }

    .playground-header {
      margin-left: 0; /* Remove left margin on mobile - no sidebar */
    }

    .grid-item-overlay h3 {
      font-size: 1.25rem;
    }

    .grid-item-overlay p {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 480px) {
    .playground-header h1 {
      font-size: 2rem;
    }

    .playground-grid {
      grid-template-columns: 1fr;
      gap: 20px;
    }

    .grid-item {
      aspect-ratio: 3/4;
    }

    .filter-toggle {
      width: 34px;
      height: 34px;
    }

    .filter-toggle svg {
      width: 15px;
      height: 15px;
    }

    .filter-menu {
      min-width: 140px;
      max-width: 180px;
      right: -20px;
    }

    .filter-option {
      padding: 0.6rem 0.8rem;
      font-size: 0.8rem;
    }

    .playground-content {
      margin-left: 0; /* Ensure no left margin on smallest screens */
    }

    .playground-header {
      margin-left: 0; /* Ensure no left margin on smallest screens */
    }

    .filter-toggle::after {
      display: none;
    }
  }

  /* Dark mode adjustments */
  :global(body.dark-mode) .filter-toggle {
    border-color: rgba(233, 226, 217, 0.15);
    color: rgba(233, 226, 217, 0.6);
  }

  :global(body.dark-mode) .filter-toggle:hover {
    background: rgba(233, 226, 217, 0.05);
    border-color: rgba(233, 226, 217, 0.25);
  }

  :global(body.dark-mode) .filter-menu {
    background: var(--white);
    border-color: rgba(233, 226, 217, 0.1);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.2);
  }

  :global(body.dark-mode .filter-option) {
    color: var(--text-dark);
    border-color: rgba(233, 226, 217, 0.06);
  }

  :global(body.dark-mode .filter-option:hover) {
    background: rgba(217, 109, 43, 0.08);
  }

  :global(body.dark-mode .filter-option .count) {
    color: rgba(233, 226, 217, 0.5);
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function () {
    const filterToggle = document.getElementById("filterToggle");
    const filterMenu = document.getElementById("filterMenu");
    const gridItems = document.querySelectorAll(".grid-item");
    let currentFilterOptions: HTMLElement[] = [];
    let currentFilter = "all";

    // Function to generate dynamic filter options
    function generateDynamicFilters() {
      // Get all unique categories from grid items
      const categories = new Set<string>();

      gridItems.forEach((item) => {
        const categoryElement = item.querySelector(".category");
        if (categoryElement) {
          const categoryName = categoryElement.textContent?.trim();
          if (categoryName) {
            categories.add(categoryName);
          }
        }
      });

      // Clear existing options
      if (filterMenu) {
        filterMenu.innerHTML = "";
      }
      currentFilterOptions = [];

      // Create "All Projects" option
      const allOption = document.createElement("div");
      allOption.className = "filter-option active";
      allOption.setAttribute("data-filter", "all");
      allOption.innerHTML = `All Projects <span class="count">(${gridItems.length})</span>`;
      filterMenu?.appendChild(allOption);
      currentFilterOptions.push(allOption);

      // Create category options (sorted alphabetically)
      const sortedCategories = Array.from(categories).sort();
      sortedCategories.forEach((category) => {
        // Count items for this category
        let count = 0;
        gridItems.forEach((item) => {
          const categoryElement = item.querySelector(".category");
          if (
            categoryElement &&
            categoryElement.textContent?.trim() === category
          ) {
            count++;
          }
        });

        const option = document.createElement("div");
        option.className = "filter-option";
        option.setAttribute("data-filter", category);
        option.innerHTML = `${category} <span class="count">(${count})</span>`;
        filterMenu?.appendChild(option);
        currentFilterOptions.push(option);
      });

      // Add click event listeners to options
      currentFilterOptions.forEach((option) => {
        option.addEventListener("click", handleFilterClick);
      });
    }

    // Toggle dropdown
    filterToggle?.addEventListener("click", (e) => {
      e.stopPropagation();
      filterToggle.classList.toggle("active");
      filterMenu?.classList.toggle("open");
    });

    // Close dropdown when clicking outside
    document.addEventListener("click", (e) => {
      const target = e.target as HTMLElement;
      if (
        filterToggle &&
        filterMenu &&
        !filterToggle.contains(target) &&
        !filterMenu.contains(target)
      ) {
        filterToggle.classList.remove("active");
        filterMenu.classList.remove("open");
      }
    });

    // Filter selection handler
    function handleFilterClick(event: Event) {
      const option = (event.target as HTMLElement).closest(".filter-option") as HTMLElement;
      if (!option) return;

      const filterValue = option.getAttribute("data-filter");
      currentFilter = filterValue || "all";

      // Update active states
      currentFilterOptions.forEach((opt) => opt.classList.remove("active"));
      option.classList.add("active");

      // Close dropdown
      filterToggle?.classList.remove("active");
      filterMenu?.classList.remove("open");

      // Apply filter
      gridItems.forEach((item) => {
        if (filterValue === "all") {
          item.classList.remove("hidden");
        } else {
          // Check if the item matches the filter category
          const categoryElement = item.querySelector(".category");
          if (
            categoryElement &&
            categoryElement.textContent?.trim() === filterValue
          ) {
            item.classList.remove("hidden");
          } else {
            item.classList.add("hidden");
          }
        }
      });
    }

    // Note: Grid items are displayed as a static gallery.
    // Individual project detail pages are available at /projects/* for select items.

    // Initialize filter system
    generateDynamicFilters();
  });
</script>
