      /* Timeline padding-left is 60px, marker width is 20px, so: left edge at 21.5px - 60px - 10px = -48.5px */
      left: -48.5px;
      transform: scale(0);
    }

    .timeline-content h3 {
      font-size: 1.5rem;
    }

