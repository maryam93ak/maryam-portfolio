<script>
  (function () {
    // Function to highlight a section when arriving via anchor link
    function highlight(target: HTMLElement | null) {
      if (!target) return;
      target.classList.add('section-highlight');
      setTimeout(() => target.classList.remove('section-highlight'), 800);
    }

    // Highlight when arriving via hash change
    window.addEventListener('hashchange', () => {
      const el = document.querySelector(location.hash) as HTMLElement | null;
      if (el) highlight(el);
    });

    // Also highlight if page loads with a hash
    window.addEventListener('DOMContentLoaded', () => {
      if (location.hash) {
        const el = document.querySelector(location.hash) as HTMLElement | null;
        if (el) {
          // Small delay to ensure scroll completes
          setTimeout(() => highlight(el), 100);
        }
      }
    });

    // Handle focus management after scroll completes
    // This listens for hash changes and scroll events to set focus
    function handleSectionFocus() {
      if (location.hash) {
        const target = document.querySelector(location.hash) as HTMLElement;
        if (target) {
          setTimeout(() => {
            const focusable = (target.querySelector('h1, h2, h3, [tabindex="-1"]') || target) as HTMLElement;
            if (focusable) {
              focusable.setAttribute('tabindex', '-1');
              focusable.focus({ preventScroll: true });
            }
          }, 600);
        }
      }
    }

    // Listen for hash changes
    window.addEventListener('hashchange', handleSectionFocus);
    
    // Also handle on page load if there's a hash
    if (location.hash) {
      handleSectionFocus();
    }
  })();
</script>